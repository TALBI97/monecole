        <a href="{{ path('prof_notes_create') }}">
            <p class="mt-3">
                Ajouter des notes
            </p>
        </a>
    </div>

    <div class="affiche_eleve text-center">
        <a href="{{ path('update_infos_prof',{'id' : app.user.id }) }}">
