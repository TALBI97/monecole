    </section>
{% elseif app.user.roles[0] is same as "ROLE_PROFESSEUR"   %}
    <div>
        <h2>Administration</h2>
    </div>
    <div>
        <a href="{{ path('accueil') }}">
            <p class="mt-3">
                <i class="fas fa-store"></i> Accueil
            </p>
        </a>
    </div>
