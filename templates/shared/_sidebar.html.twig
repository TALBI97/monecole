<div class=" sideBarAdmin versionDesktop">
    
{% if app.user %}
    {% if app.user.roles[0] is same as "ROLE_ADMIN" %}
    <div>
        <h2>Administration</h2>
    </div>
    <div>
        <a href="{{ path('accueil') }}">
            <p class="mt-3">
                <i class="fas fa-store"></i> Accueil
            </p>
        </a>
    </div>
     <section class="sect_admin">
        <div class="affiche_admin"><a href="{{ path('list_users') }}">Afficher les utilisateur</a></div>

