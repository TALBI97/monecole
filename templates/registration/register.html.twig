{% extends 'base.html.twig' %}

{% block title %}Page d'inscription{% endblock %}

{% block body %}


<div class="row">
        
       <div  class="col-md-3"> {% include "shared/_sidebar.html.twig" %}</div>
        
       <div  class="col-md-9"> <div class="container pt-5 pb-5">

        {% include "shared/_messages_flash.html.twig" %}

        <div >
            <div class="card formulaire">
                <div class="card-header">
                   <h3>Formulaire d'inscription</h3>
                </div>
                 <div class="card-body">
                    {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.phoneNumber) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.country) }}
                    </div>
                
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.city) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.postalCode) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.street) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.plainPassword.first) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.plainPassword.second) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.datenaiss) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.civilite) }}
                    </div>
                    <div class="col-12 col-md-6">
                        {{ form_row(registrationForm.imageUrl) }}
                    </div>
                </div>
                <button class="btn  mt-3" type="submit">Enregistrer</button>
                
            {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
    </div>
       
</div>


   

{% endblock %}
