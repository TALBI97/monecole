{% extends 'base.html.twig' %}

{% block title %}Page d'inscription{% endblock %}

{% block body %}


<div class="row">
        
    <div  class="col-md-3"> {% include "shared/_sidebar.html.twig" %}</div>
        
    <div  class="col-md-9"> 
        <div class="container pt-5 pb-5">

            {% include "shared/_messages_flash.html.twig" %}

            <div >
                <div class="card formulaire">
                    <div class="card-header">
                    <h3>Formulaire de modification</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-12 col-md-6">
                                {{ form_row(form.firstName) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.lastName) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.email) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.phoneNumber) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.country) }}
                            </div>
                        
                            <div class="col-12 col-md-6">
                                {{ form_row(form.city) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.postalCode) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.street) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.plainPassword.first) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.plainPassword.second) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.datenaiss) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.civilite) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.imageUrl) }}
                            </div>
                        </div>
                        <button class="btn  mt-3" type="submit">Modifier</button>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
       
</div>


   

{% endblock %}
