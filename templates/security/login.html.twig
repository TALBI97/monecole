{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="divHome">
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
     <section class="s-home">
      <div class="div-home">
        <img src="images/logo.png" alt="" style="width:50%">
      </div>
      <div id="formCnx">
           <div class="cnxh3">
            {% for message in app.flashes('notice') %}
            
                <div class='alert alert-info'>{{message}}</div>
            {% endfor %}
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
                <h3 class=" font-weight-normal">Connexion</h3>
           </div>
            <label for="inputEmail">Email :</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Password :</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
        >
            <button class="btn btn-lg mt-3 " type="submit">
                Se connecter
            </button>
            <p> <a href="{{path('passe_oublie')}}"> mot de passe oubli√© </a>?</p>
    </div>
  </section>

</form>
{% endblock %}
